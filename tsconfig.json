{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/core/*": ["core/*"],
      "@/shared/*": ["shared/*"],
      "@/assets/*": ["public/static/*"],
      "@/constants/*": ["constants/*"],
      "@/redux/*": ["redux/*"],
      "@/services/*": ["services/*"]
    },
    "types": ["cypress", "@testing-library/cypress"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "jest.config.ts",
    "cypress/e2e/integration/MainPage.js",
    "cypress/e2e/integration/MainPage.cy.test"
  ],
  "exclude": ["node_modules"]
}
