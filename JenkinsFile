pipeline {
    agent {
        docker {
          image 'node:18-alpine3.15'
          args '-p 3000:3000'
        }
    }
    environment {
    CI = 'true'
    HOME = '.'
    npm_config_cache = 'npm-cache'
    }
    stages {
        stage('Build') {
      steps {
        sh 'npm cache clean -f'
        sh 'rm -rf node_modules'
        sh 'rm -rf package-lock.json'
        sh 'npm install'
      }
        }
        stage('Test and Build') {
      parallel {
        stage('Run Tests') {
          steps {
            echo 'Should run test over here'
          }
        }
        stage('Create Build Artifacts!!') {
          steps {
            sh 'npm run build'
          }
        }
      }
        }
    }
}
