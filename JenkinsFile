pipeline {
    agent {
        docker {
          image 'node:lts-buster-slim'
          args '-p 8000:8000'
        }
    }
    environment {
    CI = 'true'
    HOME = '.'
    npm_config_cache = 'npm-cache'
    }
    stages {
        stage('Build') {
      steps {
        echo 'Hello Appsforce now we are in the Build stage'
      }
        }
    stage('Test') {
      steps {
        echo 'Hello Appsforce now we are in the test stage'
      }
    }
    stage('Deploy') {
      steps {
        echo 'Hello Appsforce now we are in the deploy stage!'
      }
    }
    }
}
